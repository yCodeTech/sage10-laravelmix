{
	"useTabs": true,
	"tabWidth": 4,
	"semi": true,
	"printWidth": 150,
	"bracketSameLine": true,
	"bracketSpacing": false,
	"overrides": [
		{
			"files": [
				"*.json",
				"*.jsonc"
			],
			"options": {
				"printWidth": 5
			}
		},
		{
			"files": [
				"*.js"
			],
			"options": {
				"printWidth": 80
			}
		},
		{
			"files": [
				"*.yml"
			],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
